<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Create Ticket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    function addTestField() {
      const container = document.getElementById('tests-container');
      const div = document.createElement('div');
      div.className = 'row mb-2';
      div.innerHTML = `
        <div class="col-md-6">
          <input type="text" name="test" class="form-control" placeholder="Test name" required>
        </div>
        <div class="col-md-6">
          <input type="text" name="result" class="form-control" placeholder="Test result" required>
        </div>
      `;
      container.appendChild(div);
    }
  </script>
</head>
<body>
  <div class="container mt-4">
    <h2>Create New Ticket</h2>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger">
        <% error.forEach(function(msg){ %>
          <div><%= msg %></div>
        <% }); %>
      </div>
    <% } %>
    <form action="/tickets" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Hostname</label>
        <input type="text" name="hostname" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control" required></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Priority</label>
        <select name="priority" class="form-select" required>
          <option value="high">High</option>
          <option value="medium">Medium</option>
          <option value="low">Low</option>
        </select>
      </div>
      <div id="tests-container">
        <div class="row mb-2">
          <div class="col-md-6">
            <input type="text" name="test" class="form-control" placeholder="Test name" required>
          </div>
          <div class="col-md-6">
            <input type="text" name="result" class="form-control" placeholder="Test result" required>
          </div>
        </div>
      </div>
      <button type="button" class="btn btn-secondary mb-3" onclick="addTestField()">Add Another Test</button>
      <div class="mb-3">
        <label class="form-label">Attachments</label>
        <input type="file" name="attachments" multiple class="form-control">
      </div>
      <button type="submit" class="btn btn-primary">Submit Ticket</button>
    </form>
  </div>
</body>
</html>
